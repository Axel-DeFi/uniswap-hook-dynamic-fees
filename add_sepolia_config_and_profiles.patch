+#!/usr/bin/env bash
+set -euo pipefail
+
+CFG="${1:-}"
+if [[ -z "$CFG" ]]; then
+  echo "Usage: $0 <path-to-config>"
+  exit 1
+fi
+
+if [[ ! -f "$CFG" ]]; then
+  echo "Config not found: $CFG"
+  exit 1
+fi
+
