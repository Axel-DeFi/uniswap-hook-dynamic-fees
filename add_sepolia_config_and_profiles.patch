@@
+#!/usr/bin/env bash
+set -euo pipefail
+
+CFG="${1:-}"
+if [[ -z "$CFG" ]]; then
+  echo "Usage: $0 <path-to-hook.conf>"
+  exit 1
+fi
+
+if [[ ! -f "$CFG" ]]; then
+  echo "Config not found: $CFG"
+  exit 1
+fi
+
+ts="$(date +%Y%m%d_%H%M%S)"
+bak="${CFG}.bak.${ts}"
+cp -p "$CFG" "$bak"
+echo "Backup: $bak"
+
+# Load existing values (best-effort) to prefill new vars.
+# shellcheck disable=SC1090
+source "$CFG" || true
+
+volatile="${VOLATILE:-${TOKEN_A:-${TOKEN0:-}}}"
+stable="${STABLE:-${TOKEN_B:-${TOKEN1:-${STABLE_TOKEN:-}}}}"
+stable_decimals="${STABLE_DECIMALS:-6}"
+tick_spacing="${TICK_SPACING:-10}"
+
+tmp="$(mktemp)"
+
+# Remove legacy bindings if present; keep everything else intact.
+grep -vE '^(TOKEN0|TOKEN1|TOKEN_A|TOKEN_B|STABLE|VOLATILE|STABLE_DECIMALS)=' "$CFG" > "$tmp"
+
+cat >> "$tmp" <<EOF
+
+# Pool binding (explicit roles, no guessing)
+VOLATILE=${volatile}
+STABLE=${stable}
+STABLE_DECIMALS=${stable_decimals}
+TICK_SPACING=${tick_spacing}
+
+# Compatibility aliases for existing scripts (do not edit)
+TOKEN_A=\${VOLATILE}
+TOKEN_B=\${STABLE}
+EOF
+
+mv "$tmp" "$CFG"
+echo "Updated: $CFG"
+
+echo
+echo "Next:"
+echo "  ./scripts/check_config.sh $CFG"
+
